@model SecondHand.Models.User

@{
    ViewData["Title"] = "Sign up";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }
        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 33%;
            padding: 5px
            /* Should be removed. Only for demonstration */
        }

        .select-selected {
            box-sizing: border-box;
            color: #000000;
            font-family: Verdana;
            font-size: 10px;
            background-color: #A6DAF3;
            border: 2px solid #000000;
        }

        input[type=text] {
            box-sizing: border-box;
            color: #000000;
            font-family: Verdana;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        input[type=number] {
            box-sizing: border-box;
            color: #000000;
            font-family: Verdana;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        input[type=password] {
            box-sizing: border-box;
            color: #000000;
            font-family: Verdana;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        input[type=date] {
            box-sizing: border-box;
            color: #000000;
            font-family: Verdana;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        h1 {
            color: #33546D;
            font-family: verdana;
            font-size: 50px;
            margin-left: 70px;
            font-weight: bold;
        }

        p1 {
            color: #000000;
            font-family: cambria;
            font-size: 20px;
            margin-left: 20px;
            margin-right: 10px;
        }
    </style>

</head>

<body style="        background-color: #F7EFED
">


<h1>SIGN UP</h1>
<hr />

<form asp-action="Create">
    <div class="column">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"><p1>Naziv:</p1></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username" class="control-label"><p1>Username:</p1></label>
            <input type="text" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"><p1>E-mail:</p1></label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"><p1>Password:</p1></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Birthday" class="control-label"><p1>Birthday:</p1></label>
            <input type="date" asp-for="Birthday" class="form-control" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Adress" class="control-label"><p1>Adress:</p1></label>
            <input type="text" asp-for="Adress" class="form-control" />
            <span asp-validation-for="Adress" class="text-danger"></span>
        </div>
    </div>
    <div class="column">
        <div class="form-group">
            <label asp-for="Gender" class="control-label"><p1>Gender:</p1></label>
            <div class="select-selected"><select asp-for="Gender"asp-items="Html.GetEnumSelectList<Gender>()"> class="form-control"></select></div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProfilePicture" class="control-label"><p1>Avatar:</p1></label>
            <input type="image" width=100 height=100 src="https://image.freepik.com/free-vector/businessman-character-avatar-isolated_24877-60111.jpg" 
                   asp-for="ProfilePicture" class="form-control" />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>
    </div>
    <div class="column">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="PaymentInformation.FullName" class="control-label"><p1>Full Name:</p1></label>
            <input type="text" asp-for="PaymentInformation.FullName" class="form-control" />
            <span asp-validation-for="PaymentInformation.FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PaymentInformation.CardNumber" class="control-label"><p1>Card number:</p1></label>
            <input type="text" asp-for="PaymentInformation.CardNumber" class="form-control" />
            <span asp-validation-for="PaymentInformation.CardNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PaymentInformation.ValidThru" class="control-label"><p1>Valid thru:</p1></label>
            <input type="number" min="1900" max="2099" step="1" value="2021" asp-for="PaymentInformation.ValidThru" class="form-control" />
            <span asp-validation-for="PaymentInformation.ValidThru" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PaymentInformation.CVV" class="control-label"><p1>CVV:</p1></label>
            <input type="number" min="100" max="999" asp-for="PaymentInformation.CVV" class="form-control" />
            <span asp-validation-for="PaymentInformation.CVV" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>
    </body>


