@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }

    table, th, td {
        padding: 30px;
    }

    table {
        border-spacing: 15px;
    }

    .button {
        display: inline-block;
        border-radius: 4px;
        background-color: #F1485B;
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 28px;
        padding: 20px;
        width: 250px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .button span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button:hover span {
            padding-right: 25px;
        }

            .button:hover span:after {
                opacity: 1;
                right: 0;
            }

    .button3 {
        text-align: center;
        margin: auto;
        border-radius: 8px;
        font-size: 24px;
        background-color: #33546D;
        color: white;
        border: 2px solid #F1485B;
    }

        .button3:hover {
            background-color: #F1485B;
            color: white;
        }

    h1 {
        color: #33546D;
        font-size: 50px;
        margin-left: 70px;
        font-weight: bold;
    }
</style>

<h1>REGISTER!</h1>
<hr />

<table>
    <tbody>
        <tr>
            <td>
                <img src="https://user-images.githubusercontent.com/72754512/111544652-164cfe00-8775-11eb-9a05-1e4efb7138ce.png" alt="Logo" width="400" height="450">
            </td>
            <td style="background-color:#33546D">
                <form id="account" method="post">
                    <h4 style="        color: #F7EFED;
        font-size: 15px;
        font-weight: bold;
">
                        REGISTER FOR A NEW ACCOUNT:
                    </h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label style="color:white" asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:white" asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label style="color:white" asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </td>

            <td style="background-color:#33546D">
                <button class="button" onclick='location.href="/Shop"' style="vertical-align:middle"><span>Go Shopping</span></button>
            </td>
        </tr>
    </tbody>
</table>





