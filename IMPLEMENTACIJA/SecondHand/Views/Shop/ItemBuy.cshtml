@model SecondHand.Models.Product

@{
    ViewData["Title"] = "Buy Item";
}

<style>
    h1 {
        color: #33546D;
        font-size: 50px;
        margin-left: 70px;
        font-weight: bold;
    }
</style>


<h1>BUY ITEM</h1>
<hr />

<div>
    <h4>Product</h4>
    <hr />

    @using (Html.BeginForm("Buy", "Shop"))
    {
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <div class="card">
                        <img class="card-img-top" src="@("~/image/"+Model.Image)" asp-append-version="true" alt="produc image" width: 100% height: auto />
                    </div>

                </div>
                <div class="col-sm">
                    <div class="card-body">

                        <dl class="row">
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Naziv)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Naziv)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Description)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Description)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Price)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Price)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Color)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Color)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Material)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Material)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Condition)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Condition)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Brand)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Brand)
                            </dd>
                            <dt class="col-sm-3">
                                @Html.DisplayNameFor(model => model.Gender)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Gender)
                            </dd>
                        </dl>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button type="submit" name="idProizvoda" value=@Html.DisplayFor(model => model.ID) class="btn btn-dark">Buy</button>
                    }
                    <a href="/Shop/Cart">Back to List</a>
                </div>
            </div>
        </div>
    }
</div>
<div>
    <!--<a asp-action="Edit" asp-route-id="@Model.ID">Edit</!--a> -->
</div>
