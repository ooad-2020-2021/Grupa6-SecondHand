@model SecondHand.Models.Product

@{
    ViewData["Title"] = "Buy";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        * {
            box-sizing: border-box;
        }
        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 40%;
            margin-right: 20px;
            /* Should be removed. Only for demonstration */
        }

        input[type=submit] {
            padding: 3px;
            float: right;
            background-color: #33546D;
            border: none;
            border-radius: 20px;
            color: white;
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 20px;
        }

        .select-selected {
            margin-left: 50px;
            box-sizing: border-box;
            color: #000000;
            max-width: 50%;
            font-size: 10px;
            background-color: #A6DAF3;
            border: 2px solid #000000;
        }

        input[type=text] {
            margin-right: 0px;
            float: right;
            box-sizing: border-box;
            color: #000000;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        input[type=number] {
            float: right;
            box-sizing: border-box;
            color: #000000;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        input[type=password] {
            box-sizing: border-box;
            color: #000000;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        input[type=date] {
            box-sizing: border-box;
            color: #000000;
            font-size: 10px;
            background-color: #A6DAF3;
            border-radius: 20px;
            border: 2px solid #000000;
        }

        h1 {
            color: #33546D;
            font-size: 50px;
            margin-left: 20px;
            font-weight: bold;
        }

        p1 {
            color: #000000;
            font-size: 20px;
            margin-left: 20px;
            margin-right: 10px;
        }
    </style>

</head>


<h1>BUY PAGE</h1>
<hr />
@using (Html.BeginForm("AddToTransactions", "Shop"))
{
    <div class="column">
        <div class="form-group">
            <label><p1>Ime:</p1> </label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>Prezime:</p1></label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>Email:</p1></label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>Telefon:</p1></label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>Adresa:</p1></label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>Grad:</p1></label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>Sifra:</p1></label>
            <input type="password" class="form-control" />
        </div>
    </div>
    <div class="column">
        <div class="form-group">
            <label><p1>Broj kartice:</p1></label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>Valid thru:</p1></label>
            <input type="number" min="2021" max="2100" step="1" value="2021" class="form-control" />
        </div>
        <div class="form-group">
            <label><p1>CVV/CVC:</p1></label>
            <input type="number" min="100" max="999" step="1" value="100" class="form-control" />
        </div>
        <br /><br />
        
            <button type="submit" name="idProizvoda" value=@Html.DisplayFor(model => model.ID) class="btn btn-dark">Buy</button>
        <br /><br />
        <div>
            <a href="/Shop/Cart">Back to List</a>
        </div>
    </div>
}




