@model SecondHand.Models.Clothing

    <head>
        <style>
            .container {
                position: relative;
            }

            .center {
                margin: 0;
                position: absolute;
                top: 50%;
                left: 50%;
                -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
            }

            input[type=number] {
                float: right;
                box-sizing: border-box;
                color: #000000;
                font-size: 10px;
                background-color: #A6DAF3;
                border-radius: 20px;
                border: 2px solid #000000;
                margin-bottom: 10px;
            }

            input[type=submit] {
                float: right;
                background-color: #33546D;
                border: none;
                border-radius: 20px;
                color: white;
                padding: 15px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 20px;
            }

            p1 {
                color: #000000;
                font-size: 20px;
                margin-left: 20px;
                margin-right: 10px;
            }
        </style>
    </head>

<h4>Clothing</h4>
<hr />
<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
