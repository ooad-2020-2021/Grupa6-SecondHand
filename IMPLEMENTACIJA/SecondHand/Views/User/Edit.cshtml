
@model SecondHand.Models.User

@{
    ViewData["Title"] = "Edit";
}

<head>
    <style>
        body {
            margin-top: 20px;
        }		
    </style>
</head>

<h1>Edit</h1>

<h4>User</h4>
<div class="container bootstrap snippets bootdey">
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <div class="text-center">
                <img src="https://www.tenforums.com/geek/gars/images/2/types/thumb_15951118880user.png" class="avatar img-circle" alt="avatar" width=250 height=250>
                <h6>Upload a new photo...</h6>

                <input type="file" class="form-control">
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">

            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label asp-for="Name" class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input asp-for="Name" type="text" class="form-control mb-2 mr-sm-2" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input asp-for="Username" type="text" class="form-control mb-2 mr-sm-2" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input asp-for="Email" type="text" class="form-control mb-2 mr-sm-2" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Adress" class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input asp-for="Adress" type="text" class="form-control mb-2 mr-sm-2" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="col-lg-3 control-label"></label>
                    <div class="col-lg-8">
                        <input asp-for="Password" type="password" class="form-control mb-2 mr-sm-2" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-lg-3 control-label">Confirm Password:</label>
                    <div class="col-lg-8">
                        <input asp-for="Password" type="password" class="form-control mb-2 mr-sm-2" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-8">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
