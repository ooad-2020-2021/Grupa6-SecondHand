<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SecondHand</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header style="        background-color: #F7EFED
">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <td>
                    <img src="https://user-images.githubusercontent.com/72754512/111544652-164cfe00-8775-11eb-9a05-1e4efb7138ce.png" alt="Logo" width="60" height="60">
                </td>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a style="font-size: 30px; font-weight: bold;" class="nav-link text-dark" href="/Shop">SHOP</a>
                        </li>
                        @if (User.IsInRole("Administrator")) {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/AUser/Index">AdminPage</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Administrator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Shop/UserProducts">Your Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Shop/Cart">Your Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Shop/Create">Create Item</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Shop/Transaction">Your Transactions</a>
                            </li>
                        }

                        <!--
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
    -->

                    </ul>
                </div>
            </div>
        </nav>
        
        </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - SecondHand - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
